<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:responsive='true'
      xmlns='http://www.w3.org/1999/xhtml'
      xmlns:b='http://www.google.com/2005/gml/b'
      xmlns:data='http://www.google.com/2005/gml/data'
      xmlns:expr='http://www.google.com/2005/gml/expr'>
<head>
  <meta charset='UTF-8'/>
  <meta content='width=device-width, initial-scale=1.0' name='viewport'/>
  <title><data:blog.pageTitle/></title>

  <!-- Canonical -->
  <link rel='canonical' href='https://eventsushi.vip/'/>

  <!-- Bootstrap / Icons / Font -->
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'/>
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css'/>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&amp;display=swap'/>

  <!-- Your Existing CSS -->
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/gh/gorarypro/elgourari/app.css' type='text/css'/>
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/gh/gorarypro/elgourari/style.css' type='text/css'/>

  <b:skin><![CDATA[
    body { background-color: #f5f5f5; }
  ]]></b:skin>
</head>

<body>

<b:section class='main' id='main' maxwidgets='1' showaddelement='no'>
<b:widget id='HTML1' locked='true' title='SPA Body' type='HTML' version='1'>
<b:widget-settings>
<b:widget-setting name='content'/>
</b:widget-settings>

<b:includable id='main'>

<!-- ==========================================================
     TOAST NOTIFICATION
=========================================================== -->
<div class="toast align-items-center text-white bg-success border-0" id="notificationToast" role="alert">
  <div class="d-flex">
    <div class="toast-body"></div>
    <button class="btn-close btn-close-white me-2 m-auto" type="button" data-bs-dismiss="toast"></button>
  </div>
</div>

<!-- Overlay -->
<div id="sidebarOverlay" class="sidebar-overlay"></div>

<!-- ==========================================================
     CART SIDEBAR
=========================================================== -->
<div id="cartSidebar" class="sidebar">
  <div class="sidebar-header">
    <h4>Your Cart</h4>
    <i id="closeCart" class="bi bi-x-lg"></i>
  </div>

  <div id="cartBody" class="sidebar-body">
    <div id="emptyCartMessage" class="empty-sidebar">
      <i class="bi bi-cart-x"></i>
      <p>Your cart is empty</p>
    </div>
  </div>

  <div id="cartFooter" class="sidebar-footer" style="display:none;">
    <div class="sidebar-total">
      <span>Total:</span>
      <span id="cartTotal">0 DH</span>
    </div>
    <button id="checkoutBtn" class="checkout-btn" type="button">Proceed to Checkout</button>
  </div>
</div>

<!-- ==========================================================
     WISHLIST SIDEBAR
=========================================================== -->
<div id="wishlistSidebar" class="sidebar">
  <div class="sidebar-header">
    <h4>Your Wishlist</h4>
    <i id="closeWishlist" class="bi bi-x-lg"></i>
  </div>

  <div id="wishlistBody" class="sidebar-body">
    <div id="emptyWishlistMessage" class="empty-sidebar">
      <i class="bi bi-heartbreak"></i>
      <p>Your wishlist is empty</p>
    </div>
  </div>
</div>

<!-- ==========================================================
     CHECKOUT MODAL
=========================================================== -->
<div id="phoneModal" class="phone-modal">
  <div class="phone-modal-content">

    <div class="phone-modal-header">
      <h4>Complete Your Order</h4>
    </div>

    <div class="phone-modal-body">

      <div class="form-group">
        <label for="customerPhone">Phone Number *</label>
        <input id="customerPhone" class="form-control" type="tel" placeholder="+212 6 00 00 00 00"/>
      </div>

      <div class="form-group">
        <label for="deliveryZone">Delivery Zone *</label>
        <select id="deliveryZone" class="form-control">
          <option value="" disabled selected>Select your zone</option>
          <option value="casablanca-center">Casablanca Center (0 DH)</option>
          <option value="casablanca-nearby">Casablanca Nearby (15 DH)</option>
          <option value="casablanca-far">Greater Casablanca (25 DH)</option>
        </select>
      </div>

      <div class="form-group">
        <label>Payment Method *</label>

        <div class="form-check">
          <input id="paymentMethodDelivery" class="form-check-input" type="radio" name="paymentMethod" value="delivery" checked/>
          <label class="form-check-label" for="paymentMethodDelivery">Payment at delivery (cash)</label>
        </div>

        <div class="form-check">
          <input id="paymentMethodCashPlus" class="form-check-input" type="radio" name="paymentMethod" value="cash-plus"/>
          <label class="form-check-label" for="paymentMethodCashPlus">CASH PLUS via phone number</label>
        </div>
      </div>

      <div id="cashPlusInfo" class="form-group" style="display:none;">
        <label>Cash Plus Payment</label>
        <p>Please pay to this number:</p>
        <div class="cashplus-box">0664070513</div>
      </div>

      <div class="info-option">
        <p>Would you like to provide additional information?</p>
        <div class="info-options d-flex gap-2">
          <button id="noThanksBtn" type="button" class="btn-secondary">No, thanks</button>
          <button id="addInfoBtn" type="button" class="btn-primary">Yes, add more info</button>
        </div>
      </div>

      <div id="additionalInfo" style="display:none;">
        <div class="form-group">
          <label for="customerName">Full Name (Optional)</label>
          <input id="customerName" class="form-control" type="text" placeholder="John Doe"/>
        </div>

        <div class="form-group">
          <label for="customerEmail">Email (Optional)</label>
          <input id="customerEmail" class="form-control" type="email" placeholder="john@example.com"/>
        </div>

        <div class="form-group">
          <label for="customerAddress">Delivery Address (Optional)</label>
          <textarea id="customerAddress" class="form-control" rows="3" placeholder="123 Street..."></textarea>
        </div>
      </div>

    </div>

    <div class="phone-modal-footer">
      <button id="cancelCheckout" class="btn-cancel" type="button">Cancel</button>
      <button id="confirmCheckout" class="btn-success" type="button">
        <span id="checkoutButtonText">Place Order</span>
        <div id="checkoutLoading" class="loading" style="display:none;"></div>
      </button>
    </div>

  </div>
</div>

<!-- ==========================================================
     QUICK VIEW
=========================================================== -->
<div id="quickViewModal" class="quick-view-modal">
  <div class="quick-view-modal-content">

    <div class="quick-view-modal-header">
      <h4 id="quickViewTitle"></h4>
      <button id="closeQuickView" type="button" class="btn-close"><i class="bi bi-x"></i></button>
    </div>

    <div class="quick-view-modal-body">

      <div class="quick-view-details">

        <div class="quick-view-image">
          <img id="quickViewImage" src="https://placehold.co/600x400" alt="Product"/>
        </div>

        <div class="quick-view-info">
          <div id="quickViewPrice" class="price"></div>
          <p id="quickViewDescription" class="description"></p>
          <button id="quickViewAddToCartBtn" class="order-btn add-to-cart-btn" type="button">
            <i class="bi bi-cart-plus"></i> Add to Cart
          </button>
        </div>

      </div>

      <div class="related-products">
        <h5>Related Products</h5>
        <div id="relatedProductsGrid" class="related-products-grid"></div>
      </div>

    </div>

  </div>
</div>

<!-- Floating Buttons -->
<div id="floatingCart" class="floating-btn floating-cart">
  <i class="bi bi-cart3"></i>
  <span id="floatingCartCount" class="icon-count">0</span>
</div>

<div id="floatingWishlist" class="floating-btn floating-wishlist">
  <i class="bi bi-heart-fill"></i>
  <span id="floatingWishlistCount" class="icon-count">0</span>
</div>

<a id="floatingWhatsapp" href="https://wa.me/212664070513"
   target="_blank" rel="noopener" class="floating-btn floating-whatsapp">
  <i class="bi bi-whatsapp"></i>
</a>

<!-- HERO -->
<header id="hero">
  <div class="container">
    <h1>Event Sushi</h1>
    <p>Fresh. Authentic. Made with Love üç£</p>
    <a class="btn" href="#menu">Explore Menu</a>
  </div>
</header>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">üç£ Event Sushi</a>
    <button class="navbar-toggler" type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div id="navbarNav" class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">

        <li class="nav-item"><a class="nav-link" href="#hero">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#menu">Menu</a></li>
        <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
        <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>

        <li class="nav-item">
          <a id="wishlistIcon" class="nav-link nav-icon">
            <i class="bi bi-heart"></i>
            <span id="wishlistCount" class="icon-count"></span>
          </a>
        </li>

        <li class="nav-item">
          <a id="cartIcon" class="nav-link nav-icon">
            <i class="bi bi-cart3"></i>
            <span id="cartCount" class="icon-count"></span>
          </a>
        </li>

      </ul>
    </div>

  </div>
</nav>

<!-- MENU -->
<section id="menu">
  <div class="container">
    <h2>üç£ Our Menu</h2>
    <p>Choose from Minibox, Box, Appetizers, and Taco options</p>

    <div id="filterContainer" class="filter-container">
      <button class="filter-btn active" data-filter="all">All</button>
    </div>

    <div id="loadingContainer" class="loading-container">
      <div class="loading-spinner"></div>
      <div class="loading-text">Loading menu...</div>
    </div>

    <div id="errorContainer" class="error-container" style="display:none;">
      <div class="error-icon"><i class="bi bi-exclamation-triangle-fill"></i></div>
      <h3 class="error-title">Unable to Load Menu</h3>
      <p class="error-message">
        A network error occurred.<br/>
        Please check your internet connection and Apps Script URL.
      </p>
      <button id="retryBtn" class="retry-btn" type="button">Try Again</button>
    </div>

    <div id="menuSections" style="display:none;"></div>

  </div>
</section>

<!-- ABOUT -->
<section id="about">
  <div class="container">
    <h2>About Us</h2>
    <p>
      Welcome to <strong>Event Sushi</strong> ‚Äî your home for fresh, handcrafted sushi.
    </p>
  </div>
</section>

<!-- CONTACT -->
<section id="contact">
  <div class="container">
    <h2>Contact Us</h2>
    <p><i class="bi bi-geo-alt"></i> Casablanca, Morocco</p>
    <p><i class="bi bi-telephone"></i> +212 6 00 00 00 00</p>
    <p><i class="bi bi-envelope"></i> hello@goraryplace.com</p>
    <a class="btn btn-outline-light mt-3" href="#hero">Back to Top</a>
  </div>
</section>

<footer>&amp;copy; 2025 Event Sushi. All rights reserved.</footer>

</b:includable>
</b:widget>
</b:section>

<!-- SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
